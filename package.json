{
  "name": "test-runner-core",
  "author": "Lloyd Brookes <75pound@gmail.com>",
  "version": "0.9.0",
  "description": "Minimal, extensible test runner.",
  "repository": "https://github.com/test-runner-js/test-runner-core",
  "main": "./index.mjs",
  "exports": "./index.mjs",
  "module": "./index.mjs",
  "license": "MIT",
  "keywords": [
    "test",
    "runner",
    "minimal",
    "simple",
    "easy",
    "tape",
    "tap",
    "ava",
    "mocha"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "npm run dist && test-runner --view.hide-skips test/*.mjs",
    "dist": "rollup -c",
    "watch": "rollup -c -w",
    "docs": "jsdoc2md -c jsdoc.conf index.mjs > docs/API.md && jsdoc2md -c jsdoc.conf lib/view.mjs > docs/view.md"
  },
  "dependencies": {
    "fsm-base": "^0.6.0",
    "test-object-model": "^0.7.1"
  },
  "devDependencies": {
    "isomorphic-assert": "^0.2.0",
    "jsdoc-to-markdown": "^7.0.1",
    "node-fetch": "^2.6.1",
    "rollup": "^2.45.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "sleep-anywhere": "^1.1.3",
    "test-runner": "^0.8.14"
  },
  "standard": {
    "ignore": [
      "tmp",
      "dist"
    ]
  },
  "files": [
    "lib",
    "dist",
    "index.mjs"
  ]
}
