{
  "name": "test-runner",
  "author": "Lloyd Brookes <75pound@gmail.com>",
  "version": "0.6.0-1",
  "description": "Minimal, extensible test runner.",
  "repository": "https://github.com/75lb/test-runner.git",
  "license": "MIT",
  "keywords": [
    "test",
    "runner",
    "minimal",
    "simple",
    "easy",
    "tape",
    "tap",
    "ava",
    "mocha"
  ],
  "main": "./dist/index.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "npm run test:js && npm run test:mjs",
    "test:js": "rollup -c build/tests.config.js && node dist/tests.js",
    "test:mjs": "node --experimental-modules test/tests.mjs",
    "docs": "jsdoc2md -c build/jsdoc.conf -t README.hbs index.mjs > README.md; echo",
    "dist": "rollup -w -c build/index.config.js",
    "dist:view": "rollup -c build/lib/view-base.config.js"
  },
  "dependencies": {
    "composite-class": "file:../../75lb/composite-class",
    "create-mixin": "file:../../75lb/create-mixin",
    "fsm-base": "^0.3.0",
    "obso": "^0.3.0",
    "race-timeout-anywhere": "^0.1.1"
  },
  "devDependencies": {
    "jsdoc-to-markdown": "^4.0.1",
    "rollup": "^0.68.1"
  },
  "standard": {
    "ignore": [
      "tmp",
      "dist"
    ]
  },
  "files": [
    "lib",
    "dist"
  ]
}
