{
  "name": "test-runner",
  "author": "Lloyd Brookes <75pound@gmail.com>",
  "version": "0.6.0-1",
  "description": "Minimal, extensible test runner.",
  "repository": "https://github.com/75lb/test-runner.git",
  "license": "MIT",
  "keywords": [
    "test",
    "runner",
    "minimal",
    "simple",
    "easy",
    "tape",
    "tap",
    "ava",
    "mocha"
  ],
  "main": "./dist/lib/test-runner.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "node --experimental-modules test/node/node-tests.mjs",
    "docs": "jsdoc2md -t README.hbs index.js > README.md; echo",
    "dist": "rollup -c dist/test/node-tests.config.js && rollup -c dist/lib/test-runner.config.js"
  },
  "dependencies": {
    "file-set": "^2.0.0",
    "obso": "^0.2.0",
    "reduce-flatten": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "jsdoc-to-markdown": "^4.0.1",
    "rollup": "^0.59.4"
  },
  "standard": {
    "ignore": [
      "tmp"
    ]
  }
}
