{
  "name": "test-runner",
  "author": "Lloyd Brookes <75pound@gmail.com>",
  "version": "0.6.0-1",
  "description": "Minimal, extensible test runner.",
  "repository": "https://github.com/75lb/test-runner.git",
  "license": "MIT",
  "keywords": [
    "test",
    "runner",
    "minimal",
    "simple",
    "easy",
    "tape",
    "tap",
    "ava",
    "mocha"
  ],
  "main": "./dist/lib/test-runner.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "npm run test:js && npm run test:esm",
    "test:js": "rollup -c dist/test/node/node-tests.config.js && node dist/test/node/node-tests.js",
    "test:esm": "node --experimental-modules test/node/node-tests.mjs",
    "docs": "jsdoc2md -c jsdoc.conf -t README.hbs lib/test-runner.mjs > README.md; echo",
    "dist": "rollup -w -c dist/lib/test-runner.config.js"
  },
  "dependencies": {
    "file-set": "^2.0.1",
    "obso": "^0.3.0",
    "race-timeout-anywhere": "^0.1.1",
    "reduce-flatten": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "jsdoc-to-markdown": "^4.0.1",
    "rollup": "^0.67.1"
  },
  "standard": {
    "ignore": [
      "tmp",
      "dist"
    ]
  }
}
